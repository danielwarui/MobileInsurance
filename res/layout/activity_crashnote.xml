<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7e4d3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_color_changer"
            android:text="Call" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText"
                android:layout_toRightOf="@+id/edtDate"
                android:src="@drawable/calendar_icon" />

            <EditText
                android:id="@+id/edtDate"
                style="@style/mEditTexts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:focusable="false"
                android:inputType="date" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvLocation"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvLicenceNo"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Licence Number" />

            <EditText
                android:id="@+id/edtLicenceNo"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvFullName"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name" />

            <EditText
                android:id="@+id/edtFullName"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="John Doe"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvAddress"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address" />

            <EditText
                android:id="@+id/edtAddress"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="79934"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvContactNumber"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number" />

            <EditText
                android:id="@+id/edtContactNumber"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="0725667788"
                android:inputType="number|phone" />

            <TextView
                android:id="@+id/tvRegNo"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Number" />

            <EditText
                android:id="@+id/edtRegNo"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="KAH 526L"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvCarMake"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Make" />

            <EditText
                android:id="@+id/edtCarMake"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Subaru Leonne"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvModel"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model" />

            <EditText
                android:id="@+id/edtModel"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Station Wagon"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvInsuranceCompany"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance Company" />

            <EditText
                android:id="@+id/edtInsuranceCompany"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Madison Insurance"
                android:inputType="text" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button1"
                style="@style/mButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Add a Witness" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvPoliceInc"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Police incident number" />

            <EditText
                android:id="@+id/edtPoliceInc"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvFireInc"
                style="@style/mTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Fire accident number" />

            <EditText
                android:id="@+id/edtFireInc"
                style="@style/mEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAddPhoto"
            style="@style/mTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Add Photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/tapphoto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/tap_to_add" />

                <ImageView
                    android:id="@+id/tapphoto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/tap_to_add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/tapphoto3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/tap_to_add" />

                <ImageView
                    android:id="@+id/tapphoto4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/tap_to_add" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            style="@style/mButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>

</ScrollView>